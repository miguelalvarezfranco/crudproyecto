<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>
<style>
    
</style>
<body>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">NOMBRE</th>
            <th scope="col">TELEFONO</th>
            <th scope="col">UBICACION</th>
            <th scope="col">TOTALCOMPRADO</th>
            <th scope="col">HISTORICODECOMPRAS</th>

        </tr>
        </thead>
        <tbody>
            <%cliente.forEach(function(elemento){%>
                <tr>
                    <td>
                        <%=elemento.nombre%>
                    </td>
                    <td>
                        <%=elemento.telefono%>
                    </td>
                    <td>
                        <%=elemento.ubicacion%>
                    </td>
                        <%=elemento.totalcomprado%>
                    </td>
                    <td>
                        <%=elemento.historicodecompras%>
                    </td>
                    <td>
                        <button type="button" class="button button1" data-toggle="modal" onclick="llenarformulario(`<%=elemento.nombre %>`, `<%=elemento.telefono %>`,`<%=elemento.ubicacion%>`, `<%=elemento.centro%>`,`<%=elemento.totalcomprado%>`,`<%=elemento.historicodecompras%>` )" data-target="#update">Actualizar</button>
                        <a href="eliminar/<%=elemento.nombre%>" class="button btn-success">eliminar</a>
                    </td>
                    
                </tr>
                    
            <%})%>
        </tbody>

                <!-- Button to Open the Modal -->


<!-- The Modal -->
<div class="modal fade" ="update">
    <div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
        <h4 class="modal-title">Modificaci√≥n</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">

            <form action="actualizar" method="post">
                <div class="form-group">
                    <label for="text">nombre</label>
                    <input type="text" class="form-control" id="actualizarnombre" name="nombreactualizar"  placeholder="nombre"  >
                </div>
                <div class="form-group">
                    <label for="text">telefono</label>
                    <input type="text" class="form-control" id="actualizartelefono" name="telefono" placeholder="telefono">
                </div>
                <div class="form-group">
                    <label for="text">ubicacion</label>
                    <input type="text" class="form-control" id="actualizarubicacion" name="ubicacion" placeholder="ubicacion">
                </div>
                <div class="form-group">
                    <label for="text">totalcomprado</label>
                    <input type="text" class="form-control" id="actualizartotalcomprado" name="totalcomprado" placeholder="totalcomprado">
                </div>
                <div class="form-group">
                    <label for="text">historicodecompras</label>
                    <input type="text" class="form-control" id="actualizarhistoricodecompras" name="historicodecompras" placeholder="historicodecompras">
            </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            
                
            </form>
        
            
        </div>
        

        
    </div>
    </div>
</div>


    </table>




    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script>
        function llenarformulario(nombre, telefono, ubicacion, centro, totalcomprado, historicodecompras ){
            actualizarnombre.value=nombre;
            actualizartelefono.value=telefono;
            actualizarubicacion.value=ubicacion;
            actualizartotalcomprado.value=totalcomprado;
            actualizarhistoricodecompras.value=historicodecompras;

        }

    </script>

</body>
</html>