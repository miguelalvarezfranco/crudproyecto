<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
</head>

<style>
    .titulo{
        text-align: center;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    }
    .table{
        border-color: black;
        width: 950px;
        justify-content: center;
        border-radius: 30px;
    }

    
</style>

<body>

    <div class="container">
        <div class="row justify-content-center">
          <div class="col-8">

    <h1 class="titulo">Tabla Clientes</h1>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">TELEFONO</th>
            <th scope="col">UBICACION</th>
            <th scope="col">TOTALCOMPRADO</th>
            <th scope="col">HISTORICODECOMPRAS</th>
            <th scope="col">ACCIONES</th>
        </tr>
        </thead>
        <tbody>
            <%cliente.forEach(function(elemento){%>
                <tr>
                    <td>
                        <%=elemento._id%>
                    </td>
                    <td>
                        <%=elemento._nombre%>
                    </td>
                    <td>
                        <%=elemento.telefono%>
                    </td>
                    <td>
                        <%=elemento.ubicacion%>
                    </td>
                        <%=elemento.totalcomprado%>
                    </td>
                    <td>
                        <%=elemento.historicodecompras%>
                    </td>
                    <td>
                        <%=elemento.acciones%>
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" onclick= "actuformulario(`<%=elemento._id %>`, `<%=elemento.telefono %>`,`<%=elemento.ubicacion%>`, `<%=elemento.centro%>`,`<%=elemento.totalcomprado%>`,`<%=elemento.historicodecompras%>` )" data-target="#update">Actualizar</button>
                        <a href="eliminar/<%elemento._id%>" class="button btn-success">eliminar</a>
                    </td>
                </tr>
                    
            <%})%>
        </tbody>

   
  
  <!-- Modal -->
  <div class="modal fade" id="update" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="update">Actualizacion</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form action="actualizar" method="post">
                <div class="form-group">
                    <label for="text">ID</label>
                    <input type="text" class="form-control" id="actualizarid" name="idactualizar"  placeholder="id" readonly >
                </div>
                <div class="form-group">
                    <label for="text">nombre</label>
                    <input type="text" class="form-control" id="actualizarnombre" name="nombreactualizar"  placeholder="nombre"  >
                </div>
                <div class="form-group">
                    <label for="text">telefono</label>
                    <input type="text" class="form-control" id="actualizartelefono" name="telefono" placeholder="telefono">
                </div>
                <div class="form-group">
                    <label for="text">ubicacion</label>
                    <input type="text" class="form-control" id="actualizarubicacion" name="ubicacion" placeholder="ubicacion">
                </div>
                <div class="form-group">
                    <label for="text">totalcomprado</label>
                    <input type="text" class="form-control" id="actualizartotalcomprado" name="totalcomprado" placeholder="totalcomprado">
                </div>
                <div class="form-group">
                    <label for="text">historicodecompras</label>
                    <input type="text" class="form-control" id="actualizarhistoricodecompras" name="historicodecompras" placeholder="historicodecompras">
            </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            
            </form>
        </div>
      </div>
    </div>
  </div>


               

    </table>



    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script>
  
    <script>
        function actuformulario(nombre, telefono, ubicacion, centro, totalcomprado, historicodecompras ){
            actualizarnombre.value=nombre;
            actualizartelefono.value=telefono;
            actualizarubicacion.value=ubicacion;
            actualizartotalcomprado.value=totalcomprado;
            actualizarhistoricodecompras.value=historicodecompras;

        }

    </script>

</body>
</html>



 