<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .titulo{
            text-align: center;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        }
        .table{
            border-color: black;
            width: 950px;
            justify-content: center;
            border-radius: 30px;
        }

        
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
          <div class="col-8">

    <h1 class="titulo">Tabla Vendedores</h1>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">PRODCUTOS VENTA</th>
            <th scope="col">SUBTOTAL VENTA</th>
            <th scope="col">FECHA DE LA VENTA</th>
            <th scope="col">IMPUESTO</th>
            <th scope="col">TOTAL VENTA</th>
            <th scope="col">CLIENTE QUE REALIZA LA COMPRA</th>
            <th scope="col">VENDEDOR QUE DESPACHA LA VENTA</th>
            <th scope="col">ACCIONES</th>


        </tr>
        </thead>
        <tbody>
            <%venta.forEach(function(elemento){%>
                <tr>
                    <td>
                        <%=elemento.productosventa%>
                    </td>
                    <td>
                        <%=elemento.subtotalventa%>
                    </td>
                    <td>
                        <%=elemento.fechadelaventa%>
                    </td>
                    <td>
                        <%=elemento.impuesto%>
                    </td>
                    <td>
                        <%=elemento.totalventa%>
                    </td>
                    <td>
                        <%=elemento.clientequerealizalacompra%>
                    </td>
                    <td>
                        <%=elemento.vendedorquedespachalaventa%>
                    </td>
                    <td>
                        <button type="button" class="button button1" data-toggle="modal" onclick="llenar(`<%=elemento.productosventa %>`, `<%=elemento.subtotalventa %>`,`<%=elemento.fechadelaventa%>`,`<%=elemento.impuesto%>`,`<%=elemento.totalventa%>`,`<%=elemento.clientequerealizalacompra%>`,`<%=elemento.vendedorquedespachalaventa%>` )" data-target="#update">Actualizar</button>
                        <a href="eliminar/<%=elemento.nombre%>" class="button btn-success">eliminar</a>
                    </td>
                    
                </tr>
                    
            <%})%>
        </tbody>

        
                <!-- Button to Open the Modal -->


<!-- The Modal -->
<div class="modal fade" ="update">
    <div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
        <h4 class="modal-title">Modificaci√≥n</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">

            <form action="actualizar" method="post">
                <div class="form-group">
                    <label for="text">productosventa</label>
                    <input type="text" class="form-control" id="actualizarproductosventa" name="productosventaactualizar"  placeholder="productosventa"  >
                </div>
                <div class="form-group">
                    <label for="text">subtotalventa</label>
                    <input type="text" class="form-control" id="actualizarsubotalventa" name="subtotalventa" placeholder="subtotalventa">
                </div>
                <div class="form-group">
                    <label for="text">fechadelaventa</label>
                    <input type="text" class="form-control" id="actualizarfechadelaventa" name="fechadelaventa" placeholder="fechadelaventa">
                </div>
                <div class="form-group">
                    <label for="text">impuesto</label>
                    <input type="text" class="form-control" id="actualizarimpuesto" name="impuesto" placeholder="impuesto">
                </div>
                <div class="form-group">
                    <label for="text">total venta</label>
                    <input type="text" class="form-control" id="actualizartotalventa" name="totaventa" placeholder="tota venta">
                </div>
                <div class="form-group">
                    <label for="text">clientequerealizalacompra</label>
                    <input type="text" class="form-control" id="actualizarclientequerealizalacompra" name="clientenquerealizalacompra" placeholder="cliente que realiza la compra">
                </div>
                <div class="form-group">
                    <label for="text">vendedorquedespachalaventa</label>
                    <input type="text" class="form-control" id="actualizarvendedorquedespachalaventa " name="vendedorquedespachalaventa" placeholder="vendedor que despacha la venta">
                </div>
             
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
    </div>
</div>


    </table>




    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script>
        function llenar(productosventa, subtotalventa, fechadelaventa, impuesto, totalventa, clientequerealizalacompra, vendedorquedespachalaventa){
            actualizarproductosventa.value=productosventa;
            actualizarsubtotalventa.value=subtotalventa;
            actualizarfechadelaventa.value=fechadelaventa;
            actualizarimpuesto.value=impuesto;
            actualizartotalventa.value=totalventa;
            actualizarclientequerealizalacompra.value=clientequerealizalacompra;
            actualizarvendedorquedespachalaventa.value=vendedorquedespachalaventa;


        }

    </script>
</body>
</html>