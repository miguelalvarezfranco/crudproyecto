<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .container-nav {
        position: sticky;
        z-index: 3;
        top: 0;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        height: 10vh;
        background-color: #1b1b1b;

    }

    .navbar-logo {
        justify-self: start;
        margin-left: 20px;
        color: #fff;
        cursor: pointer;



    }

    .ver-carrito {
        font-size: 25px;
        margin-right: 20px;
        margin-top: 2.1vh;
        cursor: pointer;
    
    }

    .formu input {
        border-radius: 10px;
        padding: 10px;

    }

    .modal-body {
        background: #616161;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #9bc5c3, #616161);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #9bc5c3, #616161); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

    }

    .card {
        display: inline-block;
        padding: 10px;
        margin-top: 15px;
        margin-left: 73px;
        border-radius: 15px;
        border-color: black;
        background: #abbaab;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #ffffff, #abbaab);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #ffffff, #abbaab); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */



    }

    .card :hover {
        transform: scale(1.1);
        box-shadow: 0px 0px 30px -15px rgba(0, 0, 0, 0);
    }

    .card-body a {
        margin-top: 2px;
    }

    .contenedor {
        margin-left: 45px;

    }
   
</style>

<body>

    <div class="container-nav">

