<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
</head>

<style>
    .titulo{
        text-align: center;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    }
    .table{
        border-color: black;
        width: 950px;
        justify-content: center;
        border-radius: 30px;
    }

    
</style>

<body>
    <div class="container">
        <div class="row justify-content-center">
          <div class="col-8">
            
            <h1 class="titulo">Tabla Productos</h1>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">REFERENCIA</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">DESCRIPCION</th>
            <th scope="col">PRECIO</th>
            <th scope="col">STOCK</th>
            <th scope="col">HABILITADO</th>
            <th scope="col">imagen</th>
            <th scope="col">ACCIONES</th>

        </tr>
        </thead>
        <tbody>
            <%producto.forEach(function(elemento){%>
                <tr>
                    <td>
                        <%=elemento._id%>   
                    </td>
                    <td>
                        <%=elemento.referencia%>
                    </td>
                    <td>
                        <%=elemento.nombre%>
                    </td>
                    <td>
                        <%=elemento.descripcion%>
                    </td>
                    <td>
                        <%=elemento.precio%>
                    </td>
                    <td>
                        <%=elemento.stock%>
                    </td>
                    <td>
                        <%=elemento.habilitado%>
                    </td>
                    <td>
                        <%=elemento.imagen%>
                    </td>
                    <td>
                        <button type="button" class="button button1" data-toggle="modal" onclick="llenarformulario( `<%=elemento._id %>`,`<%=elemento.referencia %>`, `<%=elemento.nombre %>`,`<%=elemento.descripcion%>`, `<%=elemento.precio%>`,`<%=elemento.stock%>`,`<%=elemento.imagen%>`,`<%=elemento.habilitado%>`, `<%=elemento.imagen%>` )" data-target="#update">Actualizar</button>
                        <a href="eliminar/<%=elemento._id%>" class="button btn-success">eliminar</a>
                    </td>
                    
                </tr>
                    
            <%})%>
        </tbody>

                <!-- Button to Open the Modal -->


<!-- The Modal -->
<div class="modal fade" id="update">
    <div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
        <h4 class="modal-title">Modificaci√≥n</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">

            <form action="actualizar" method="post">
                <div class="form-group">
                    <label for="text">ID</label>
                    <input type="text" class="form-control" id="actualizarid" name="idactualizar"  placeholder="id" readonly >
                </div>
                <div class="form-group">
                    <label for="text">referencia</label>
                    <input type="text" class="form-control" id="actualizarreferencia" name="referencia"  placeholder="referencia"  >
                </div>
                <div class="form-group">
                    <label for="text">nombre</label>
                    <input type="text" class="form-control" id="actualizarnombre" name="nombre" placeholder="nombre">
                </div>
                <div class="form-group">
                    <label for="text">descripcion</label>
                    <input type="text" class="form-control" id="actualizardescripcion" name="descripcion" placeholder="descripcion">
                </div>
                <div class="form-group">
                    <label for="text">precio</label>
                    <input type="text" class="form-control" id="actualizarprecio" name="precio" placeholder="precio">
                </div>
                <div class="form-group">
                    <label for="text">stock</label>
                    <input type="text" class="form-control" id="actualizarstock" name="stock" placeholder="stock">
            </div>
            <div class="form-group">
                <label for="text">habilitado</label>
                <input type="text" class="form-control" id="actualizarhabilitado" name="habilitado" placeholder="habilitado">
            </div>
            <div class="form-group">
                <label for="text">imagen</label>
                <input type="text" class="form-control" id="actualizarimagen" name="imagen" placeholder="imagen">
            </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        
            
        </div>
        

        
    </div>
    </div>
</div>


    </table>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script>



    <script>
        function llenarformulario(id, referencia, nombre, descripcion, precio, stock, imagen, habilitado ){
            actualizarid.value=id;
            actualizarreferencia.value=referencia;
            actualizarnombre.value=nombre;
            actualizardescripcion.value=descripcion;
            actualizarprecio.value=precio;
            actualizarstock.value=stock;
            actualizarhabilitado.value=habilitado;

        }

    </script>

    

</body>
</html>